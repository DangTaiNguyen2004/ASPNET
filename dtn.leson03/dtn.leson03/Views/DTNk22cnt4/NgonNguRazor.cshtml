
@{
    ViewBag.Title = "Ngon Ngu Razor";
}

<h2>Ngon Ngu Razor</h2>
<h3>bien</h3>
@{ 
    var name = "dang tai nguyen";
    int age = 45;
    DateTime dt = DateTime.Now;
}
<p>Ho ten:@name</p>
<p>tuoi:@age</p>
<p>Time:@dt</p>
<hr />
<h3>cau lenh if</h3>
@{ 
    if (age > 40)
            {
                <p>tuoi @age => Gia roi</p>
    }
    else
            {
                <p>con tre</p>
            }
}
<hr />
<h3>Loop:for,while, do...while, foreach....</h3>
@{ 
    int num = 10;
}
@for (int i = 0;i< num;i++)
            {
                <li>@i => @i*@i</li>
            }
<h3>mang</h3>
@{      
    string[] names = { "tran van a", "nguyen thi b", "le dai c", "trinh van D" };
}
@foreach (var item in names)
            {
                <p>@item</p>
            }
<hr />
@foreach (var item in ViewBag.names)
{
    <p>@item</p>
}